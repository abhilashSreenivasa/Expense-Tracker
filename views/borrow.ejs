
<%- include('./partials/header.ejs') %>

<div class="main">
    <div class="main-hello">Borrowing Details</div>
    <div class="main-info">
<div class="main-text">
    <div class="main-text-key">
        borrowed money:
    </div>
    <div class="main-text-value">
        <%= money[0].borrowedMoney %>
    </div>
</div>

<form class="form" action="/borrow?_method=PUT" method="POST">
    <div class="form-field">
        <label class="form-field-label">Borrowed From</label>
        <input class="form-field-input" type="text" name="from" id="from" maxlength="20" >
        
    </div>

    <div class="form-field">
        <label class="form-field-label">Description</label>
        <input class="form-field-input" type="text" name="description" id="description" maxlength="25" >
    </div>

    <div class="form-field">
        <label class="form-field-label">Amount(rs)</label>
        <input class="form-field-input" type="number" name="borrow" id="borrow" min="0" max="100000" maxlength="6" required>
    </div>
    <div class="form-field">
        <button class="form-field-btn" type="submit">Borrow</button>
    </div>
</form>
</div>
</div>
