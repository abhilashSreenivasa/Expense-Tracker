
<%- include('./partials/header.ejs') %>

<div class="main">
<div class="main-hello">Lending Details</div>
<div class="main-info">
<div class="main-text">
   <div class="main-text-key">Lent money:</div>
   <div class='main-text-value'><%= money[0].lentMoney %></div> 
</div>

<form class="form" action="/lend?_method=PUT" method="POST">
    <div class="form-field">
        <label class="form-field-label">Lending to</label>
        <input class="form-field-input" type="text" name="to" id="to" maxlength="20" required>
    </div>

    <div class="form-field">
        <label class="form-field-label">Description</label>
        <input class="form-field-input" type="text" name="description" id="description" maxlength="20" required>
    </div>
<div class="form-field">
     <label class="form-field-label">Amount(rs)</label>
     <input class="form-field-input" type="number" name="lend" id="lend" min="0" max="100000" required>
</div>
<% if(message!=undefined){ %>
    <div class="main-login-error">
     <%=message %>
    </div> 
     <% } %>
<div class="form-field">
<button class="form-field-btn" type="submit">Lend</button>
</div>
</form>
</div>
</div>

